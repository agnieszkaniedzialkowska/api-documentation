{% if config.get('plugins.page-toc.active') or attribute(page.header, 'page-toc').active %}
    <section class="page-toc">
        <div class="toc-wrapper">            
            {% set table_of_contents = toc(page.content) %}
            {% if table_of_contents is not empty %}
                <h4>On this page</h4>
                {{ table_of_contents }}
            {% endif %}
        </div>
    </section>
{% endif %}